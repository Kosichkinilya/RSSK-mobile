<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RSSK_mobile.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="#efeff3">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="hellopeople.png" />

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                Text="Привет!" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Здесь ты будешь видеть новости университета" />






        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
